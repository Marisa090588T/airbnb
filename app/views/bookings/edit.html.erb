<div class="container bookings">
  <h1>Edit Booking</h1>
  <%= simple_form_for [@booking.accommodation, @booking] do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :start_date %>
    </div>

    <div class="form-inputs">
      <%= f.input :end_date %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
  <%= link_to 'See detail', accommodation_booking_path(@booking.accommodation, @booking) %> |
  <%= link_to 'Back to booking list', bookings_path %>
</div>