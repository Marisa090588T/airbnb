<div class="container">
  <h1>Booking Detail</h1>
  <div class="row">  
    <div class="col-md-6 col-12 cards-index">
      <div class="card card-items-index">
        <div class="card-description">
          <div class="card">
            <p class="card-text"><strong>Start Date:</strong><%= @booking.start_date %></p>
            <p class="card-text"><strong>End Date:</strong><%= @booking.end_date %></p>
            <p class="card-text"><strong>Total Price:</strong><%= @booking.total_price %></p>
            <p class="card-text"><strong>Status:</strong><%= @booking.status %></p>
            <% if current_user == @booking.user %>
              | <%= link_to 'edit', edit_accommodation_booking_path %> | 
              <%= link_to "delete", accommodation_booking_path(@accommodation, @booking), method: :delete, data: { confirm: "Are you sure?" } %> |
            <% else %>
              <%= link_to 'Back', dashboards_path %>
            <% end %>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

