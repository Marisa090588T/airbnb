<div class="container">
  <h3>Your booking <%= @booking.accommodation.name %></h3>
  <div class="card-trip">
    <% if @booking.accommodation.photo.attached? %>
      <%= cl_image_tag @booking.accommodation.photo.key, height: 150, width: 200, crop: :fill %>
    <% else %>
      <%= cl_image_tag src="https://res.cloudinary.com/dq6gibxhn/image/upload/v1603843635/8wha00enorrdh9suh8p7ztvt18td.jpg", height: 150, width: 200, crop: :fill %>
    <% end  %>
    <div class="card-trip-infos">
      <div>
        <p class="card-title">Location: <%= @booking.accommodation.location %></p>
        <p class="card-text">Description: <%= @booking.accommodation.description %></p>
        <p class="card-text">Type: <%= @booking.accommodation.property_type %></p>
        <p class="card-text">Start Date: <%= @booking.start_date %></p>
        <p class="card-text">End Date: <%= @booking.end_date %></p>
        <p class="card-text">Status: <%= @booking.status %></p>
        <p id="price">Total Price: $ <%= @booking.total_price %> / <%= (@booking.end_date - @booking.start_date).to_i %>days</p>
      </div>
      <% if current_user == @booking.user %>
        <div>
          <%= link_to 'Edit', edit_booking_path, class: 'btn btn-success' %> 
          <%= link_to "Cancel", booking_path(@booking), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-warning' %>
        </div>
        <% else %>
          <%= link_to 'Back to Dashboard', dashboards_path %>
        <% end %>  
    </div>
  </div>
</div>

