<% comment_user = User.find(comment.user_id) %>
  <li id="comment-<%= comment.id %>">
    <div class="row">
      <div class="col-md-4">
        <span class="comment"><%= comment.content %></span>
      </div>
      <div class="col-md-4">
        <span class="comment-create-at"><%= time_ago_in_words(comment.created_at) %>ago</span>
      </div> 
      <div class="col-md-4">
        <span class="user"> commented @<%=  comment_user.user_name %></span>
      <% if current_user.id == comment.user_id %>
      　<%= link_to "Delete", comment_path(comment), method: :delete,　remote: true, data: { confirm: "Are you sure?" } %>
      <% end %>
      </div>
    </div>
  </li>

