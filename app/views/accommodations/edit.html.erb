<div class="container">
  <h1>Edit <%= @accommodation.name %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for [@user, @accommodation] do |f|%>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :location %>
        <%= f.input :property_type, collection: Accommodation::TYPES %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, value: 'Edit Accommodation', class: 'btn btn-primary' %>
        <%= link_to 'cancel', accommodation_path %>
      <% end %>
    </div>
  </div>
</div>